
@model List<UserVM>

<body id="reportsPage">
	<div class="container mt-5">
		<div class="row tm-content-row">
			<div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
				<div class="tm-bg-primary-dark tm-block tm-block-products">
					@if(ViewData["result"]!=null){
						<div class="form-text">
							@ViewData["result"]
						</div>
					}
					<div class="tm-product-table-container">
						<table class="table table-hover tm-table-small tm-product-table">
							<thead>
								<tr>
									<th scope="col">&nbsp;</th>
									<th scope="col">UserID</th>
									<th scope="col">User Name</th>
									<th scope="col">Ad Soyad</th>
									<th scope="col">Role</th>
									<th scope="col">&nbsp;</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<th scope="row"><input type="checkbox" /></th>
										<td>@item.User.Id</td>
										<td class="tm-product-name">@item.User.UserName</td>
										<td>@item.User.AdSoyad</td>
										<td>@item.SelectedRole</td>
										<td>
											<a asp-action="Delete" asp-controller="Account" asp-route-id="@item.User.Id" class="tm-product-delete-link">
												<i class="far fa-trash-alt tm-product-delete-icon"></i>
											</a>
											<a asp-action="Update" asp-controller="Account" asp-route-id="@item.User.Id" class="tm-product-delete-link">
												<i class="fa fa-edit tm-product-delete-icon"></i>
											</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>

				</div>
			</div>
		</div>
	</div>
</body>
