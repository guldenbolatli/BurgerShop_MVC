@model IEnumerable<Icecek>

<body id="reportsPage">
    <div class="container mt-5">
        <div class="row tm-content-row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
                <div class="tm-bg-primary-dark tm-block tm-block-products">
                    <div class="tm-product-table-container">
                        <table class="table table-hover tm-table-small tm-product-table">
                            <thead>
                                <tr>
                                    <th scope="col">&nbsp;</th>
                                    <th scope="col">Ürün Adı</th>
                                    <th scope="col">Birim Fiyat</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var icecek in Model)
                                {

                                    <tr>
                                        <th scope="row"><input type="checkbox" /></th>
                                        <td class="tm-product-name">@icecek.Ad</td>
                                        <td>@icecek.BirimFiyat</td>
                                        <td>
                                            <a asp-controller="Icecek" asp-action="Update" asp-route-id="@icecek.ID" class="tm-product-delete-link">
                                                <i class="far fa-edit tm-product-delete-icon"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-controller="Icecek" asp-action="Delete" asp-route-id="@icecek.ID" class="tm-product-delete-link">
                                                <i class="far fa-trash-alt tm-product-delete-icon "></i>
                                            </a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- table container -->
                    <a asp-action="Create" asp-controller="Icecek"
                       class="btn btn-primary btn-block text-uppercase mb-3">Yeni Ürün Ekle</a>
                    <button asp-controller="Icecek" asp-action="Delete" class="btn btn-primary btn-block text-uppercase">
                        Seçili Ürünleri Sil
                    </button>
                </div>
            </div>
